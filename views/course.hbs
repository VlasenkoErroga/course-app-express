
<div class="section">
    <div class="container">
        <div class="card-panel grey lighten-5 z-depth-1">
            <div class="row valign-wrapper">
                <div class="col s2">
                    {{!-- <img src="{{course.img}}" alt="{{course.title}}" class="responsive-img"> --}}
                    <img
                        src="data:{{course.file.contentType}};base64,{{course.file.data}}"
                        class="responsive-img"></div>
                    <div class="col s10 relative">
                        <h2 class="header black-text">{{course.title}}</h2>
                         {{#if isAuth}}
                        <form action="/card/add" method="POST">
                            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                <input type="hidden" name="id" value="{{course.id}}">
                                    <button type="submit" class="waves-effect waves-light btn red">
                                        <i class="material-icons right">local_mall</i>
                                        Buy
                                    </button>
                                </form>
                                
                                <form action="/favorite/add" method="POST">
                                    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                        <input type="hidden" name="id" value="{{course.id}}">
                                            <button type="submit" class="waves-effect waves-light btn">
                                                <i class="material-icons right">favorite</i>
                                                Favorite
                                            </button>
                                        </form>
                            {{/if}}
                                    </div>
                                    <div class="chip badge-currency teal lighten-2 white-text">
                                        {{course.price}}

                                    </div>

                                </div>
                                <p class="grey-text text-darken-3 lighten-3">{{course.short_description}}</p>
                            </div>
                        </div>
                    </div>
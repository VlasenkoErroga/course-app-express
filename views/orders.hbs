<h1>{{title}}</h1>

{{#if orders.length}}
{{#each orders}}
  <div class="row">
    <div class="col s12 m8">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Order {{_id}}</span>
          
          <ul class="collection collapsible">
            {{#each courses}}
            <li class="collection-item avatar ">
            <img src="data:{{course.file.contentType}};base64,
                     {{course.file.data}}" alt="{{course.title}}" class="circle">
            <span class="title">{{course.title}}</span>
            <div><b class="badge-currency">{{course.price}}</b></div>
            <p>{{course.short_description}}</p>
            <p class="secondary-content">x{{counter}}</p>
            </li>
            {{/each}}
        </ul>
        </div>
        <div class="card-action">
        <span class="date">{{date}}</span> <b class="badge-currency secondary-content">{{totalPrice}}</b>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>You haven't made any trades</p>
{{/if}}
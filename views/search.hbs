<h1>{{title}}</h1>
<blockquote class="lighten-2">
    {{blockquote}}
</blockquote>

<div class="row">
    <div class="input-field col-12">
        <form action="/search?" method="GET">
            <div class="input-field d-flex-row">
                <input value="" id="search" name="q" type="text" required="required">
                <label for="q">Find course for your self</label>
                <button type="submit" class="waves-effect waves-light btn search">
                    <i class="material-icons left">search</i>Find</button>

            </div>
        </form>
    </div>
</div>
<div class="row">
    {{#each courses}}
        <div class="col s12 m6 l4 xl3">
            <div class="card  hoverable">
                <div class="card-image">
                    <div class="card-image__wrap">
                        {{!-- <img src="{{img}}" alt="{{title}}"> --}}

                        <img src="data:{{file.contentType}};base64,
                     {{file.data}}"></div>
                    <div class="new badge badge-currency teal lighten-2 white-text">
                        {{!-- <i class="close material-icons">attach_money</i> --}}
                        {{price}}
                    </div>
                </div>
                <div class="card-content">
                    <span class="card-title">Course
                        {{title}}</span>
                    <p>{{short_description}}</p>
                </div>
                <div class="card-action">
                    <a href="/courses/{{_id}}" class="">Show more</a>
                    {{#if @root.isAuth}}

                        {{#ifeq @root.user._id userId._id}}
                            <a href="/courses/{{id}}/edit?allow=true">Edit</a>
                        {{/ifeq}}

                        <form action="/card/add" method="POST">
                            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                            <input type="hidden" name="id" value="{{id}}">
                            <button
                                type="submit"
                                class="btn btn-floating halfway-fab waves-effect waves-light red">
                                <i class="material-icons">local_mall</i>
                            </button>
                        </form>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
</div>
